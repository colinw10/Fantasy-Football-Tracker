<h1>Add Stats</h1>
<form action="/stats" method="POST">
  <label>Player:</label>
  <select name="player" required>
    <% players.forEach(p => { %>
      <option value="<%= p._id %>"><%= p.name %> - <%= p.position %></option>
    <% }) %>
  </select>

  <label>Week:</label>
  <input type="number" name="week" required>

  <label>Passing Yards:</label>
  <input type="number" name="passingYards">

  <label>Rushing Yards:</label>
  <input type="number" name="rushingYards">

  <label>Receiving Yards:</label>
  <input type="number" name="receivingYards">

  <label>Touchdowns:</label>
  <input type="number" name="touchdowns">

  <label>Carries:</label>
  <input type="number" name="carries">

  <label>Receptions:</label>
  <input type="number" name="receptions">

  <label>Projected Stats:</label>
  <input type="text" name="projectedStats">

  <button type="submit">Save</button>
</form>

