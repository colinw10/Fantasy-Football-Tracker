<h1>Edit Stats for <%= stat.player.name %></h1>
<form action="/stats/<%= stat._id %>?_method=PUT" method="POST">
  <label>Week:</label>
  <input type="number" name="week" value="<%= stat.week %>">

  <label>Passing Yards:</label>
  <input type="number" name="passingYards" value="<%= stat.passingYards %>">

  <label>Rushing Yards:</label>
  <input type="number" name="rushingYards" value="<%= stat.rushingYards %>">

  <label>Receiving Yards:</label>
  <input type="number" name="receivingYards" value="<%= stat.receivingYards %>">

  <label>Touchdowns:</label>
  <input type="number" name="touchdowns" value="<%= stat.touchdowns %>">

  <label>Carries:</label>
  <input type="number" name="carries" value="<%= stat.carries %>">

  <label>Receptions:</label>
  <input type="number" name="receptions" value="<%= stat.receptions %>">

  <label>Projected Stats:</label>
  <input type="text" name="projectedStats" value="<%= stat.projectedStats %>">

  <button type="submit">Save Changes</button>
</form>

